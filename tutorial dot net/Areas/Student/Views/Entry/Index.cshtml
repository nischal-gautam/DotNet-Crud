                <button class="btn btn-secondary col-10" id="DeleteStudent" data-bind="click: DeleteStudent">DeleteStudent</button>
            </div>
        </div>
        <hr class="my-1" />
        <div class="table table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Student Name</th>
                        <th>Student Age</th>
                        <th>Student Class</th>
                        <th>Student Roll</th>
                    </tr>
                </thead>
